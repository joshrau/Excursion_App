<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Database</h1>
      <div class="well">Saved Listings to be Edited or Destroyed</div>
    </div>  
  </div>    
</div>

<div class="container">
  <div class="row">
  
      <div class="col-md-6">
        <table class="table table-striped">

        <thead>
         
          <tr>
            <th></th>
            <th></th>
            <th></th>


            <th>Name</th>
            <th>Address</th>
           
            <th>Category</th>
           
            
           
            <th>Hours</th>
            <th>Latitude</th>
            <th>Longitude</th>
            
            <th>Price</th>
            
            <th>Website</th>
            <th>Phone</th>
            <th>Email</th>
            
            <th>Image 1</th>
          
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @listings.each do |listing| %>

            <tr>

              <td><%= link_to 'Show', listing %></td>
              <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
              <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>

              <td><%= listing.name %></td>
              <td><%= listing.address %></td>
              
              <td><%= listing.category %></td>
              
             
              <td><%= listing.hours %></td>
              <td><%= listing.lat %></td>
              <td><%= listing.long %></td>
              
              <td><%= listing.price %></td>
              
              <td><%= listing.url %></td>
              <td><%= listing.phone %></td>
              <td><%= listing.email %></td>
              
              <td><%= listing.image1 %></td>
              
              
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  
</div>      


