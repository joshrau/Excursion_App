<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Content Generator</h1>
      <div class="well">Please select the location to research. Then set each level # to find a new listing to evaluate</div>


    </div>  
    
  </div>    
</div>




<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= form_tag listings_path, method: 'GET' do %>

        <div class= "control-group">
          <%= label_tag "location", nil,  class: "control-label" %>
            <div class = "controls">
              <%= select_tag "location", 
              "<option>Chiang_Mai</option>
              <option>Ao_Nang</option>
              <option>Bangkok/Sukhumvit</option>
              
              <option>Chiang_Rai</option>
              <option>Ko_Chang</option>
              <option>Ko_Lanta</option>
              <option>Ko_Pha_Ngan</option>
              <option>Ko_Phi_Phi</option>
              <option>Ko_Samui</option>
              <option>Ko_Tao</option>
              <option>Pai</option>
              <option>Pattaya</option>
              <option>Phuket</option>
              <option>Sukhothai</option>".html_safe %>
            </div>
        </div>
      <br />
      <p> checked: <%=@location %></p>
      
        <%= number_field_tag :level_one, @level_one, placeholder: @level_one, max:100 %>
        <%= @listings_one %>
        <br /><br />
        <%= number_field_tag :level_two, @level_two, placeholder: @level_two, max:100 %>
        <%= @listings_two %>
        <br /><br />
        <%= number_field_tag :level_three, @level_three, placeholder: @level_three, max:100 %>
        <%= @listings_three %>
        <br /><br />

     
        <%= submit_tag 'Check' %>
        <%= submit_tag 'Submit' %>
      <% end %>
  
    </div> 
  </div>
</div>

<br/><br/>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= form_tag new_listing_path, method: 'GET' do %>

        <div class= "control-group">
          <%= label_tag "location", nil,  class: "control-label" %>
            <div class = "controls">
              <%= select_tag "location", 
              "<option>Ao_Nang</option>
              <option>Bangkok/Sukhumvit</option>
              <option>Chiang_Mai</option>
              <option>Chiang_Rai</option>
              <option>Ko_Chang</option>
              <option>Ko_Lanta</option>
              <option>Ko_Pha_Ngan</option>
              <option>Ko_Phi_Phi</option>
              <option>Ko_Samui</option>
              <option>Ko_Tao</option>
              <option>Pai</option>
              <option>Pattaya</option>
              <option>Phuket</option>
              <option>Sukhothai</option>".html_safe %>
            </div>
        </div>
      <br />
        <%= number_field_tag :level_one, nil, placeholder: @level_one, max: 5 %><br /><br />
        <%= number_field_tag :level_two, nil, placeholder: @level_two, max: 5 %><br /><br />
        <%= number_field_tag :level_three, nil, placeholder: @level_three, max: 5 %><br /><br />
        
        <%= submit_tag 'New Listing' %>
      <% end %>
    </div> 
  </div>
</div>



<br />
<hr>
