<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Content Generator</h1>
      <div class="well">Please select the location to research. Then set each level # to find a new listing to evaluate</div>
    </div>  
  </div>    
</div>




<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= form_tag new_listing_path, method: 'GET' do %>

        <div class= "control-group">
          <%= label_tag "location", nil,  class: "control-label" %>
            <div class = "controls">
              <%= select_tag "location", 
              "<option>Ao_Nang</option>
              <option>Bangkok/Sukhumvit</option>
              <option>Chiang_Mai</option>
              <option>Chiang_Rai</option>
              <option>Ko_Chang</option>
              <option>Ko_Lanta</option>
              <option>Ko_Pha_Ngan</option>
              <option>Ko_Phi_Phi</option>
              <option>Ko_Samui</option>
              <option>Ko_Tao</option>
              <option>Pai</option>
              <option>Pattaya</option>
              <option>Phuket</option>
              <option>Sukhothai</option>".html_safe %>
            </div>
        </div>
      <br />
        <%= number_field_tag :level_one, nil, placeholder: "level_one", max: 5 %><br /><br />
        <%= number_field_tag :level_two, nil, placeholder: "level_two", max: 5 %><br /><br />
        <%= number_field_tag :level_three, nil, placeholder: "level_three", max: 5 %><br /><br />
        <%= submit_tag 'New Listing' %>
      <% end %>
    </div> 
  </div>
</div>



<br />
<hr>
<br />

<div class="container">
  <div class="row">
  
      <div class="col-md-6">
        <table class="table table-striped">

        <thead>
         
          <tr>
            <th>Name</th>
            <th>Address</th>
           
            <th>Category</th>
           
            <th >Description</th>
            <th>Directions</th>
            <th>Hours</th>
            <th>Lat</th>
            <th>Long</th>
            
            <th>Price</th>
            
            <th>Url</th>
            <th>Phone</th>
            <th>Email</th>
            
            <th>Image1</th>
          
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @listings.each do |listing| %>

            <tr>
              <td><%= listing.name %></td>
              <td><%= listing.address %></td>
              
              <td><%= listing.category %></td>
              <td><%= listing.description %></td>
              <td><%= listing.directions %></td>
              <td><%= listing.hours %></td>
              <td><%= listing.lat %></td>
              <td><%= listing.long %></td>
              
              <td><%= listing.price %></td>
              
              <td><%= listing.url %></td>
              <td><%= listing.phone %></td>
              <td><%= listing.email %></td>
              
              <td><%= listing.image1 %></td>
              
              <td><%= link_to 'Show', listing %></td>
              <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
              <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  
</div>      


